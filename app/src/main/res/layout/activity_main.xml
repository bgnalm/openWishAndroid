<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/material_blue_grey_900">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a wish"
        android:id="@+id/addWishButton"
        android:layout_above="@+id/readWishesButton"
        android:layout_marginBottom="24dp"
        android:layout_alignRight="@+id/readWishesButton"
        android:layout_alignEnd="@+id/readWishesButton"
        android:layout_alignLeft="@+id/readWishesButton"
        android:layout_alignStart="@+id/readWishesButton"
        android:onClick="addWishButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Wishes"
        android:id="@+id/readWishesButton"
        android:layout_above="@+id/createdWishesButton"
        android:layout_marginBottom="29dp"
        android:layout_alignRight="@+id/createdWishesButton"
        android:layout_alignEnd="@+id/createdWishesButton"
        android:layout_alignLeft="@+id/createdWishesButton"
        android:layout_alignStart="@+id/createdWishesButton"
        android:onClick="readWishesButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created Wishes"
        android:id="@+id/createdWishesButton"
        android:layout_above="@+id/bugsButton"
        android:layout_marginBottom="31dp"
        android:layout_alignRight="@+id/bugsButton"
        android:layout_alignEnd="@+id/bugsButton"
        android:layout_alignLeft="@+id/bugsButton"
        android:layout_alignStart="@+id/bugsButton"
        android:onClick="createdWishesButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bug Report/Suggestions"
        android:id="@+id/bugsButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OpenWish"
        android:id="@+id/title"
        android:layout_marginTop="43dp"
        android:textSize="50dp"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Client v0.1"
        android:id="@+id/version"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />
</RelativeLayout>
